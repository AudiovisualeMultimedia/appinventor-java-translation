            <Parameter>
                <Call genus="string-split">
                    <Parameter value="&quot;\s&quot;" type="String" />
                </Call>
            </Parameter>
        </Call>
    </Entry>

    <Entry genus="string-less-than" target="String" static="false" nParams="1" type="Boolean">
        <Parameter type="String" />
