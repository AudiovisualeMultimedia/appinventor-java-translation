            <Function type="Integer" name="indexOf" static="false">
                <Value index="1" type="List" />
                <Parameter index="0" type="Object" />
            </Function>
        </Operation>
    </Entry>

    <Entry genus="replace-list-item" static="false" target="List" type="void" nParams="2">
        <Parameter type="Integer" />
